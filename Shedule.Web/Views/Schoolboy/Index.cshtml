@model Shedule.Data.Model.Schoolboy[]
@using Shedule.Data.Model
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    @Html.ActionLink("Добавить нового ученика", "Add", "Schoolboy")
</p>

<table class="table">
    <tr>
        <th>
            Имя
        </th>
        <th>
            Фамилия
        </th>
        <th></th>
    </tr>

    @foreach (Schoolboy item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @if(this.Context.User.IsInRole("admin"))
                {
                    @Html.ActionLink("Редактировать", "Edit", new { id = item.Id }) @:|
                }
                @Html.ActionLink("Просмотреть", "Details", new { id = item.Id }) 
                @if(this.Context.User.IsInRole("admin"))
                {
                    @:| @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
                }
            </td>
            <td>
                @Html.ActionLink("Посмотреть рассписание", "SheduleForSchoolboy", "Shedule", new { schoolboyId = item.Id}, null)
            </td>
        </tr>
    }
</table>
