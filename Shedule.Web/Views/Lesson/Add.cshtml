@model Shedule.Web.ViewModels.AddLessonViewModel

@{
    ViewBag.Title = "Добавить урок";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h2>Форма для добавления урока</h2>
        <br />
        <div class="form-group">
            <label class="col-md-2">
                Преподователь: 
            </label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Teachers, Model.Teachers, new { Name = "TeacherId" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2">
                Предмет:
            </label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Teachings, Model.Teachings, new { Name = "TeachingId" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2">
                День недели:
            </label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Days, Model.Days, new { Name = "DayOfWeekNumber"})
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2">
                Номер урока:
            </label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Periods, Model.Periods, new { Name = "PeriodNumber"})
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2">
                Кабинет:
            </label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Classrooms, Model.Classrooms, new { Name = "ClassroomId" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Добавить урок" class="btn btn-default" />
            </div>
        </div>
    </div>
}
